// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
	"features": {
		"edit_prediction_provider": "copilot"
	},
	// lambdalabs api secret_zed-home_9650b8a4272144259c36ed757fa37ad1.zYuTJGyhTxE6FguzzYgHBxbzcqvKxIqM
	// curl -u <api_key>: https://cloud.lambda.ai/api/v1/instances
	"agent": {
		"default_profile": "write",
		"always_allow_tool_actions": false,
		"inline_assistant_model": {
			"provider": "anthropic",
			"model": "claude-sonnet-4-5-thinking-latest"
		},
		"default_model": {
			"provider": "anthropic",
			"model": "claude-sonnet-4-5-thinking-latest"
		}
	},
	"theme": "Ayu Dark",
	"ui_font_size": 16,
	"buffer_font_size": 16,
	"tab_size": 4,
	"hard_tabs": true,
	"vim_mode": true,
	"relative_line_numbers": true,
	"soft_wrap": "editor_width",
	"project_panel": {
		// "auto_reveal_entries": false
	},
	"lsp": {
		"rust-analyzer": {
			"initialization_options": {
				"cargo": {
					"features": "all",
					"buildScripts": true
				}
			}
		},
		"svelte-language-server": {
			"initialization_options": {
				"dontFilterIncompleteCompletions": true
			}
		}
	},
	"languages": {
		"YAML": {
			"tab_size": 2,
			"hard_tabs": false
		},
		"TypeScript": {
			"formatter": "prettier",
			"prettier": {
				"allowed": true
			}
		},
		"GraphQL": {
			"formatter": "prettier",
			"prettier": {
				"allowed": true
			}
		},
		"PHP": {
			"formatter": "language_server",
			"language_servers": ["intelephense", "..."]
		},
		"HTML": {
			"formatter": "prettier",
			"prettier": {
				"allowed": true
			}
		},
		"JavaScript": {
			"formatter": "prettier",
			"prettier": {
				"allowed": true
			}
		},
		"SCSS": {
			"formatter": "prettier",
			"prettier": {
				"allowed": true
			}
		},
		"Twig": {
			"formatter": {
				"external": {
					"command": "djlint",
					"arguments": [
						"-",
						"--reformat",
						"--indent",
						"2",
						"--max-blank-lines",
						"1",
						"--profile",
						"nonjucks",
						"--quiet"
					]
				}
			}
		}
	},
	"prettier": {
		"tab_width": 4,
		"useTabs": true
	},
	"inline_code_actions": false,
	"file_types": {
		"Diff": ["patch"],
		"Rust": ["rhai"],
		"Json": ["webmanifest"]
	}
}
